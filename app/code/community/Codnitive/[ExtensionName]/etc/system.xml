<config>	
    <sections>
        <codnitivepaymentmethods translate="label" module="pasargad"><!-- Other extension node name -->
            <!-- ... -->
                        <heading_activation translate="label">
                            <label>Activation</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </heading_activation>
                        <sernum translate="label">
                            <label>Serial Number</label>
                            <config_path>payment/pasargad/sernum</config_path><!-- payment and pasargad nodes must change to the extension nodes -->
                            <frontend_type>obscure</frontend_type>
                            <validate>required-entry</validate>
                            <backend_model>pasargad/system_config_backend_encryptedserial</backend_model><!-- pasargad must change to extension namespace -->
<!--                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sernum>
                        <regcod translate="label">
                            <label>Registration Code</label>
                            <config_path>payment/pasargad/regcod</config_path><!-- payment and pasargad nodes must change to the extension nodes -->
                            <frontend_type>obscure</frontend_type>
                            <validate>required-entry</validate>
                            <backend_model>pasargad/system_config_backend_encryptedregcode</backend_model><!-- pasargad must change to extension namespace -->
<!--                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </regcod>
                        <ownnam translate="label">
                            <label>Full Name</label>
                            <config_path>payment/pasargad/ownnam</config_path><!-- payment and pasargad nodes must change to the extension nodes -->
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <backend_model>pasargad/system_config_backend_name</backend_model><!-- pasargad must change to extension namespace -->
<!--                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ownnam>
                        <ownmai translate="label">
                            <label>Email Address</label>
                            <config_path>payment/pasargad/ownmai</config_path><!-- payment and pasargad nodes must change to the extension nodes -->
                            <frontend_type>text</frontend_type>
                            <validate>validate-email required-entry</validate>
                            <backend_model>pasargad/system_config_backend_email</backend_model><!-- pasargad must change to extension namespace -->
<!--                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>-->
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ownmai>
                        
                        <active translate="label">
                            <label>Enabled</label>
                            <config_path>payment/parsiangateway/active</config_path>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <backend_model>parsiangateway/system_config_backend_cert</backend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
            <!-- Other extension system config -->
        </codnitivepaymentmethods>
    </sections>
</config>
